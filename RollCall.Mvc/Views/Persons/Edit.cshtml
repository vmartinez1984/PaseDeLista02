@model RollCall.Core.Dtos.PersonDto

@{
    ViewData["Title"] = "Editar persona";
}

<h1>Editar</h1>

<h4>Persona</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <input asp-for="Id" type="hidden" />                
            <input asp-for="AddressId" type="hidden" />                
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label"></label>
                <input asp-for="Birthday" class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genere" class="control-label"></label>
                <select asp-for="Genere" class="form-select">
                    <option value="">Seleccione</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>
                </select>
                <span asp-validation-for="Genere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StreetAndNumber" class="control-label"></label>
                <input asp-for="StreetAndNumber" class="form-control" />
                <span asp-validation-for="StreetAndNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZipCode" class="control-label"></label>
                <input asp-for="ZipCode" class="form-control" maxlength="5" onkeyup="buscarCodigoPostal()" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Settlement" class="control-label"></label>
                <select asp-for="Settlement" class="form-select" asp-items="ViewBag.CodigosPostales"></select>
                <span asp-validation-for="Settlement" class="text-danger"></span>
            </div>

           <div class="form-group">
                <label asp-for="Town" class="control-label"></label>
                <input id="TownAux" class="form-control" disabled="disabled"/>
                <input asp-for="Town" type="hidden"/>
                <span asp-validation-for="Town" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <input id="StateAux" class="form-control" disabled="disabled" />
                <input asp-for="State" type="hidden" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/codigosPostales.js"></script>
}
